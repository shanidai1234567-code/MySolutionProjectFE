<Page x:Class="MyApplication.pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login"
      FlowDirection="RightToLeft">
    <Grid>
        <Image Source="C:\Users\User\source\repos\shanidai1234567-code\MySolutionProjectFE\MyApplication\Images\צילום מסך 2025-12-07 144054.png" 
       Stretch="UniformToFill">
            <Image.Effect>
                <BlurEffect Radius="15" />
            </Image.Effect>
        </Image>

        <Rectangle Fill="Black" Opacity="0.2"/>

        <Border Style="{StaticResource VolunteerCardStyle}" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                Width="320" 
                Padding="30">

            <StackPanel>
                <TextBlock Text="כניסה למערכת" 
                           Style="{StaticResource HeaderLabelStyle}"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,25"/>

                <TextBlock Text="הכנס סיסמה:" 
                           Foreground="{StaticResource LightTextColor}" 
                           HorizontalAlignment="Right" 
                           Margin="0,0,5,5"/>

                <PasswordBox x:Name="txtPassword" 
                             Height="45" 
                             VerticalContentAlignment="Center" 
                             HorizontalContentAlignment="Center" 
                             FontSize="18"
                             BorderBrush="#DDD"/>

                <Button x:Name="btnLogin" 
                        Content="התחבר למערכת" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        Background="{StaticResource SecondaryColor}" 
                        Margin="0,25,0,0" 
                        Click="btnLogin_Click"/>

                <Separator Margin="0,20" Background="#EEE"/>

                <Button x:Name="btnAdminLogin" 
                        Content="כניסת מנהל 🛠️" 
                        Height="35" 
                        Background="Transparent" 
                        BorderThickness="0"
                        Foreground="{StaticResource PrimaryColor}"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="btnAdminLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource UrgentColor}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>