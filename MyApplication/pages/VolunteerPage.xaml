<Page x:Class="MyApplication.pages.VolunteerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyApplication.pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="VolunteerPage"
      FlowDirection="RightToLeft">
    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" Padding="30,20" CornerRadius="0,0,30,30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="שלום, מתנדב יקר! 👋" 
                           FontWeight="ExtraBold" Foreground="#2D3748"
                           FontSize="32" Margin="0,0,0,5"/>
                <TextBlock Text="הנה קריאות לעזרה שממתינות לך באזורך:" 
                           Foreground="#718096" FontSize="16" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal">
                    <Button Content="הכל" Style="{StaticResource FilterButtonStyle}" IsEnabled="False"/>
                    <Button Content="מציאת לינה" Style="{StaticResource FilterButtonStyle}" Tag="Housing"/>
                    <Button Content="חלוקת אוכל" Style="{StaticResource FilterButtonStyle}" Tag="Food"/>
                    <Button Content="עזרה רפואית" Style="{StaticResource FilterButtonStyle}" Tag="Medical"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ListBox Grid.Row="1" 
                 x:Name="lstReports" 
                 Background="Transparent" 
                 BorderThickness="0" 
                 Padding="30,20"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 HorizontalContentAlignment="Stretch">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,0,0,15" Background="White" CornerRadius="15" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.05" ShadowDepth="1"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <Border Background="#EBF4FF" CornerRadius="5" Padding="8,3">
                                        <TextBlock Text="{Binding CategoryName}" Foreground="#3182CE" FontSize="11" FontWeight="Bold"/>
                                    </Border>

                                    <Border Background="#FFF5F5" CornerRadius="5" Padding="8,3" Margin="10,0"
                                            Visibility="{Binding IsUrgent, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="🔥 דחוף" Foreground="#E53E3E" FontSize="11" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{Binding Title}" FontSize="22" FontWeight="Bold" Foreground="#2D3748" Margin="0,0,0,8"/>
                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Foreground="#4A5568" FontSize="14" LineHeight="20"/>

                                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                    <TextBlock Text="📍" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Location}" Foreground="#718096" FontSize="13"/>
                                    <TextBlock Text="🕒" VerticalAlignment="Center" Margin="15,0,5,0"/>
                                    <TextBlock Text="{Binding TimeAgo}" Foreground="#718096" FontSize="13"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1" VerticalAlignment="Bottom"
                                    Style="{StaticResource ActionButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="אני רוצה לעזור" VerticalAlignment="Center"/>
                                    <TextBlock Text="←" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>