<Page x:Class="MyApplication.pages.VolunteerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyApplication.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VolunteerPage">

    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" >
            <TextBlock Text="שלום, מתנדב יקר! 👋" 
                       Style="{StaticResource HeaderLabelStyle}" 
                       FontSize="28" Margin="0,0,0,5"/>
            <TextBlock Text="הנה קריאות לעזרה שממתינות לך באזורך:" 
                       Foreground="{StaticResource LightTextColor}" 
                       FontSize="16" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal">
                <Button Content="הכל" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0" Width="80"/>
                <Button Content="חלוקת מזון" Style="{StaticResource PrimaryButtonStyle}" Background="{StaticResource SecondaryColor}" Margin="0,0,10,0"/>
                <Button Content="הסעות" Style="{StaticResource PrimaryButtonStyle}" Background="{StaticResource SecondaryColor}" Margin="0,0,10,0"/>
            </StackPanel>
        </StackPanel>

        <ListBox Grid.Row="1" 
                 x:Name="lstReports" 
                 Background="Transparent" 
                 BorderThickness="0" 
                 Padding="20,0,20,20"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource VolunteerCardStyle}" Width="700">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                                    <Border Background="{StaticResource UrgentColor}" CornerRadius="10" Padding="8,2" Margin="15,0,0,0" 
                                            Visibility="{Binding IsUrgent, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock Text="דחוף" Foreground="White" FontSize="12" FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Foreground="{StaticResource MainTextColor}" Margin="0,0,0,10"/>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📍" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Location}" Foreground="{StaticResource LightTextColor}"/>
                                    <TextBlock Text=" | " Foreground="#CCC" Margin="10,0"/>
                                    <TextBlock Text="📅" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding Date}" Foreground="{StaticResource LightTextColor}"/>
                                </StackPanel>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    Content="אני רוצה לעזור" 
                                    Style="{StaticResource PrimaryButtonStyle}" 
                                    VerticalAlignment="Center" 
                                    Padding="20,10"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
